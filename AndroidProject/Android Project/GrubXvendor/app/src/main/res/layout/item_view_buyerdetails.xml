<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardview"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lyt_img"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/darker_gray"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/img3" />
                </LinearLayout>

                <TextView
                    android:id="@+id/prd_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lyt_img"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="product_name" />

                <TextView
                    android:id="@+id/rupee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/prd_name"
                    android:layout_marginLeft="10dp"
                    android:text="â‚¹"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/prd_name"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/rupee"
                    android:layout_toRightOf="@+id/rupee"
                    android:text="300"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/discount_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/prd_name"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/amount"
                    android:text="300" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/prd_name"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/discount_amount"
                    android:src="@drawable/follow" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lyt1"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="@color/sky_blue"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textSize="12sp"
                    android:text="Edit"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>